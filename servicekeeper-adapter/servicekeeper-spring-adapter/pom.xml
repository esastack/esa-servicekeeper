<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.esastack</groupId>
        <artifactId>servicekeeper-adapter</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>servicekeeper-spring-adapter</artifactId>
    <name>ServiceKeeper :: Spring :: Adapter</name>

    <dependencies>
        <!-- spring core -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.aspectj</groupId>
            <artifactId>aspectjweaver</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>servicekeeper-ext-factory</artifactId>
        </dependency>

        <!--for cabin package-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>servicekeeper-ext-factory</artifactId>
            <classifier>cabin-classifier</classifier>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>io.esastack</groupId>
                <artifactId>cabin-module-maven-plugin</artifactId>
                <version>${cabin.version}</version>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <goals>
                            <goal>module-repackage</goal>
                        </goals>
                        <configuration>
                            <classifier>cabin-classifier</classifier>
                            <exported>
                                <packages>
                                    <package>io.esastack.servicekeeper.adapter.spring</package>
                                </packages>
                            </exported>
                            <imported>
                                <packages>
                                    <package>org.springframework</package>
                                    <package>esa.commons</package>
                                </packages>
                            </imported>
                            <excludes>
                                <exclude>io.esastack:servicekeeper-*</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
